{
  "name": "postcss-scss",
  "version": "4.0.3",
  "description": "SCSS parser for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "parser",
    "scss",
    "sass"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-scss",
  "engines": {
    "node": ">=12.0"
  },
  "main": "lib/scss-syntax",
  "types": "lib/scss-syntax.d.ts",
  "exports": {
    ".": {
      "require": "./lib/scss-syntax.js",
      "import": "./lib/scss-syntax.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "unit": "uvu . '\\.test\\.js$'",
    "test": "pnpm unit && eslint . && ./test/integration.js"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.3.3"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "clean-publish": "^3.4.5",
    "eslint": "^8.6.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "postcss": "^8.4.5",
    "postcss-parser-tests": "^8.3.7",
    "uvu": "^0.5.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "consistent-return": "off"
    }
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
